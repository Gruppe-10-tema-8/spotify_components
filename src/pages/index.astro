---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import CardList from "../components/CardList.astro";
import Filter from "../components/Filter.astro";
import FilterList from "../components/FilterList.astro";
import "../css/style.css";
---

<Layout title="Spotify">
  <FilterList>
    <Filter type="All" />
    <Filter type="Music" />
    <Filter type="Podcasts" />
  </FilterList>
  <CardList title="Your mix">
    <Card
      imgsrc="https://via.assets.so/album.png?id=1&q=95&w=360&h=360&fit=fill"
      mix="Daily Mix"
      number="01"
      artists="MBV, Sonic Youth, Vacilitating Dependency"
      color="blue"
    />
