      imgsrc="https://via.assets.so/album.png?id=2&q=95&w=360&h=360&fit=fill"
      mix="Daily Mix"
      number="02"
      artists="MBV, Sonic Youth, Vacilitating Dependency"
      color="cyan"
    />
    <Card
      imgsrc="https://via.assets.so/album.png?id=3&q=95&w=360&h=360&fit=fill"
      mix="Daily Mix"
      number="03"
      artists="MBV, Sonic Youth, Vacilitating Dependency"
      color="magenta"
    />
    <Card
      imgsrc="https://via.assets.so/album.png?id=4&q=95&w=360&h=360&fit=fill"
      mix="Daily Mix"
      number="04"
      artists="MBV, Sonic Youth, Vacilitating Dependency"
      color="lightgreen"
    />
  </CardList>
  <CardList title="Discover">
    <Card
      imgsrc="https://via.assets.so/album.png?id=5&q=95&w=360&h=360&fit=fill"
      mix="This month"
      number="New"
      artists="MBV, Sonic Youth, Vacilitating Dependency"
      color="beige"
